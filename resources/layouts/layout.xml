<layout id="MainLayout">
    <!-- Mode Label (Work/Outdoor etc.) -->
    <label id="mode_label" x="center" y="20%" text="Work" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER" font="Graphics.FONT_LARGE"/>

    <!-- Status Label (Running/Paused/Ended) positioned between mode and timer -->
    <label id="status_label" x="center" y="40%" text=" " color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER" font="Graphics.FONT_MEDIUM"/>

    <!-- Timer Label -->
    <label id="timer_label" x="center" y="70%" text="" color="Graphics.COLOR_YELLOW" justification="Graphics.TEXT_JUSTIFY_CENTER" font="Graphics.FONT_LARGE" />

    <!-- Elapsed Time Label positioned at the bottom -->
    <label id="elapsed_label" x="center" y="bottom" text="" color="Graphics.COLOR_LT_GRAY" justification="Graphics.TEXT_JUSTIFY_CENTER" font="Graphics.FONT_MEDIUM" />
</layout>
